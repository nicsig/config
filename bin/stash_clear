#!/bin/bash

# Purpose: Clear all the stashes from the repo under a certain directory.
# Useful in `~/.vim/plugged` and in `~/Vcs`.
#
# Usage:
#
#     $ cd /path/to/dir
#     $ /path/to/this/script

for dir in */; do
  if [[ $(git -C "${dir}" stash list 2>/dev/null) ]]; then
    git -C "${dir}" stash clear
  fi
done
